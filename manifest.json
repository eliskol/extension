{
    "name": "Math Academy Dark Mode + Augmentation",
    "description": "WIP",
    "version": "1.0",
    "manifest_version": 3,
    "background": {},
    "permissions": [
        "contentSettings"
    ],
    "action": {
        "default_popup": "",
        "default_icon": {}
    },
    "icons": {},
    "options_page": "",
    "content_scripts": [
        {
            "matches": [
                "https://*.mathacademy.com/learn/*",
                "https://*.mathacademy.com/assignments/*"
            ],
            "css": [
                "./css/learn.css"
            ],
            "run_at": "document_end",
            "js": [
                "./js/learn.js"
            ]
        },
        {
            "matches": [
                "https://*.mathacademy.com/*"
            ],
            "css": [
                "./css/global.css"
            ],
            "run_at": "document_end",
            "js": [
                "./js/global.js"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "https://*.mathacademy.com/topics/*"
            ],
            "css": [
                "./css/topic.css"
            ],
            "run_at": "document_end",
            "js": [
                "./js/topic.js"
            ]
        },
        {
            "matches": [
                "https://*.mathacademy.com/*/review"
            ],
            "css": [
                "./css/review.css"
            ],
            "run_at": "document_end",
            "js": [
                "./js/review.js"
            ]
        },
        {
            "matches": [
                "https://*.mathacademy.com/*/lesson"
            ],
            "css": [
                "./css/lesson.css"
            ],
            "run_at": "document_end",
            "js": [
                "./js/lesson.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "img/*"
            ],
            "matches": [
                "https://*.mathacademy.com/*"
            ]
        }
    ]
}